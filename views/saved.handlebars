{{#each data}}
<div class="container">
    <div class="card">
        <h5 class="card-header bg-secondary text-light">{{title}}</h5>
        <div class="card-body">
            {{!-- <h5 class="card-title">Special title treatment</h5> --}}
            <p class="card-text">{{preview}}</p>
            <p class="card-text"><small class="text-muted"><a href={{link}} target="_blank">Read more</a></small></p>
            {{!-- <button id="saveArticle" class="btn btn-info" data-id={{_id}}>Save Article</button> --}}
            <button id="articleNotes" class="btn btn-info" data-id={{_id}}>Article Notes</button>
            <button id="deleteArticle" class="btn btn-warning" data-id={{_id}}>Delete Article</button>
        </div>

    </div>
</div>


<div id={{_id}} class="modal {{_id}}" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Notes for {{_id}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          {{!-- <span aria-hidden="true">&times;</span> --}}
        </button>
      </div>
      <div class="modal-body">
        {{!-- {{#each notesDB}} --}}
        
        {{>notes}}
        <p>notes will go here</p>
        {{!-- {{/each}} --}}
          <form>
              <textarea id="note{{_id}}" rows="4" cols="55" placeholder="New Note" class="noteToAdd"></textarea>
          </form>
        {{!-- <p>Modal body text goes here.</p> --}}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary saveNote" data-id={{_id}}>Save changes</button>
      </div>
    </div>
  </div>
</div>
{{/each}}